<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">

      <% if (isAuthenticated) { %>
        <li class="main-header__item">
          <a class="<%= path === '/index' ? 'active' : '' %>" href="/api/">Home</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/products' ? 'active' : '' %>" href="/api/products">Products</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/offers' ? 'active' : '' %>" href="/api/offers">Offers</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/add-product' ? 'active' : '' %>" href="/api/add-product">Add Product
          </a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/add-offer' ? 'active' : '' %>" href="/api/add-offer">Add Offer
          </a>
        </li>

        <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>
        <li class="main-header__item">
          <a class="<%= path === '/login' ? 'active' : '' %>" href="/api/login">Login</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/register' ? 'active' : '' %>" href="/api/register">Register</a>
        </li>
        <% } else { %>
          <li class="main-header__item">
            <form action="/api/logout" method="post">
              <button type="submit">Logout</button>
            </form>
          </li>
          <% } %>
    </ul>
  </nav>
</header>

<nav class="mobile-nav">
  <ul class="mobile-nav__item-list">


    <% if (isAuthenticated) { %>
      <li class="mobile-nav__item">
        <a class="<%= path === '/index' ? 'active' : '' %>" href="/api/">Home</a>
      </li>
      <li class="mobile-nav__item">
        <a class="<%= path === '/products' ? 'active' : '' %>" href="/api/products">Products</a>
      </li>
      <li class="mobile-nav__item">
        <a class="<%= path === '/offers' ? 'active' : '' %>" href="/api/offers">Offers</a>
      </li>
      <li class="mobile-nav__item">
        <a class="<%= path === '/add-product' ? 'active' : '' %>" href="/api/add-product">Add Product
        </a>
      </li>
      <li class="mobile-nav__item">
        <a class="<%= path === '/add-offer' ? 'active' : '' %>" href="/api/add-offer">Add Offer
        </a>
      </li>
      <% } %>
        <% if (!isAuthenticated) { %>
          <li class="mobile-nav__item">
            <a class="<%= path === '/login' ? 'active' : '' %>" href="/api/login">Login</a>
          </li>
          <li class="mobile-nav__item">
            <a class="<%= path === '/signup' ? 'active' : '' %>" href="/api/signup">Signup</a>
          </li>
          <% } else { %>
            <li class="mobile-nav__item">
              <form action="/api/logout" method="post">
                <button type="submit">Logout</button>
